<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.moviedownloadbtweb.mapper.LoginMapper">
    <!--    管理员登录-->
    <select id="adminLogin" resultType="com.example.moviedownloadbtweb.domain.Admin">
        SELECT *
        FROM admin
        <where>
            admin_name = #{adminName}
            AND
            admin_password = #{adminPassword}
        </where>
    </select>
    <!--    用户登录-->
    <select id="userLogin" resultType="com.example.moviedownloadbtweb.domain.User">
        SELECT *
        FROM user
        <where>
            username = #{username}
            AND
            password = #{password}
        </where>
    </select>
    <!--根据用户名查找信息-->
    <select id="getUserByUsername" resultType="com.example.moviedownloadbtweb.domain.User">
        SELECT *
        FROM user
        <where>
            username = #{username}
        </where>
    </select>
</mapper>